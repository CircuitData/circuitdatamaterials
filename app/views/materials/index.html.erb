<form>
  <%= label_tag :material_name %>
  <%= search_field nil, :material_name, value: params[:material_name] %>
  <%= label_tag :numerical_filter %>
  <%= select_tag :numerical_filter,
    options_for_select(Material.numerical_columns, params[:numerical_filter]),
    prompt: 'Select attribute' %>
  <%= label_tag :min %>
  <%= text_field nil, :min, value: params[:min] %>
  <%= label_tag :max %>
  <%= text_field nil, :max, value: params[:max] %>
  <%= submit_tag "Search" %>
</form>

<% if !@results.nil? && @results.empty? %>
  <p>No results</p>
<% elsif @results.present? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |material| %>
    <tr>
      <td><%= material.name %></td>
      <td><%= material.manufacturer_name %></td>
      <td><%= link_to "More", material_path(material) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>
