<form>
  <%= label_tag :material_name %>
  <%= search_field nil, :material_name %>
  <%= submit_tag "Search" %>
</form>

<% if !@results.nil? && @results.empty? %>
  <p>No results</p>
<% elsif @results.present? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |material| %>
    <tr>
      <td><%= material.name %></td>
      <td><%= material.manufacturer_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>
