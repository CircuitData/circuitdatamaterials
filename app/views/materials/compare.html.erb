<% @materials = @materials.compact %>

<% if @materials.size  > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Property</th>
        <% @materials.each do |material| %>
          <th><%= material.name %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td></td>
      <% @materials.each do |material| %>
        <td>
          <%= button_to 'Remove', material, method: "put",
          class: "btn btn-primary", params: { redirect: "/materials/compare" } %>
        </td>
      <% end %>
      </tr>
      <% material_values(@materials).each do |attr, values| %>
      <tr>
        <td><%= show_attribute(attr) %></td>
        <% values.each do |value| %>
          <td><%= styled_value(value, values) %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>